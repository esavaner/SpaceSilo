datasource db {
  provider = "postgresql"
}

enum Role {
  owner
  admin
  user
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(user)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  settings  Json?

  photos    Photo[]
  albums    Album[]
  ownerOf   Group[]
  memberOf  GroupMember[]
}


model Photo {
  id        String   @id @default(cuid())
  url       String
  path      String
  thumbnailPath String
  hash      String
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  albums    Album[]
  group     Group[]
}

model Album {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  parentId  String?
  parent    Album?   @relation("Subalbums", fields: [parentId], references: [id])
  subalbums Album[]  @relation("Subalbums")
  photos    Photo[]
  group     Group[]
}


model Group {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  personal  Boolean?  @default(false)
  color     String?
  members   GroupMember[]
  albums    Album[]
  photos    Photo[]
}

enum GroupAccessLevel {
  admin
  edit
  read
}

model GroupMember {
  groupId   String
  group     Group    @relation(fields: [groupId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  access    GroupAccessLevel @default(read)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@id([groupId, userId])
}