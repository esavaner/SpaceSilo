{
  "compilerOptions": {
    "target": "es2024",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
